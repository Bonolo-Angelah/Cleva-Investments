# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cleva_investment
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cleva_investment

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_very_long_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# AI API Configuration (Choose one)
# OpenAI (Paid but best performance)
OPENAI_API_KEY=your_openai_api_key

# Cohere (Free tier available)
COHERE_API_KEY=your_cohere_api_key

# Investment Data APIs
# Alpha Vantage (Free tier: 25 requests/day)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Financial Modeling Prep (Free tier: 250 requests/day)
FMP_API_KEY=your_fmp_api_key

# News API (Free tier: 100 requests/day)
NEWS_API_KEY=your_news_api_key

# Finnhub (Free tier: 60 requests/minute)
FINNHUB_API_KEY=your_finnhub_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
# For Gmail: host=smtp.gmail.com, port=587
# You need to enable "Allow less secure apps" or use App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@clevainvestment.com

# App URL (for email links)
APP_URL=http://localhost:5174
